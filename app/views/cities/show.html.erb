<div class="header-row text-center">
  <h3> Top Resturaunts & Neighborhoods in <%=@city.name%></h3>
</div>
<div class="city-view container-fluid">
  <div class="row">
    <div id="neighborhoods" class="thumbnail col-xs-offset-1 text-centered col-xs-3">
      <h4> Neighborhoods in <%=@city.name%></h4>
      <br></br>
      <%if @neighborhoods != nil %>
      <% @neighborhoods.each do |neighborhood|%>
      <%if neighborhood.class == Array %>
      <%else %>
      <%=neighborhood["name"]%>
      <%=link_to "Neighborhood Info", neighborhood["url"]%>
      <br></br>
      <%end %>
      <%end%>
      <%else %>
      <p> There are no documented neighborshoods for this area</p>
      <%end %>
    </div>
    <div class="thumbnail col-xs-8 pull-center">
      <%if current_user.nil? %>
      <%= link_to "Login to Critique #{@city.name}", login_path, class: 'btn btn-lg btn-cities pull-right' %>
      <%else %>
      <%= link_to "Critique #{@city.name}", new_comment_path(name: @city.name), class: 'btn btn-lg btn-cities pull-right' %>
      <%end %>
      <h3> Reviews:</h3>
      <br>
      <%if @city.comments.nil? %>
      <p>there are no reviews for this city</p>
      <%else %>
      <%@city.comments.each do |comment| %>
      <h4><%= comment.user.username %></h4>
      <ul>
      <%= render partial: 'shared/stars_read_only', locals: {rating: comment.stars} %>
      <li>Pros: <%= comment.pros %></li>
      <li>Cons: <%= comment.cons %></li>
      </ul>
      <%end %>
      <%end %>
    </div>
      <% @resturaunts.each do |resturaunt| %>
      <div class="thumbnail col-xs-2 resturaunt-list">
      <img src="<%=resturaunt.image_url %>"></img>
      <h4><%= resturaunt.name %></h4>
      <img src="<%=resturaunt.rating_img_url_small%>"></img>
      <%= resturaunt.display_phone %>
      <br></br>
      <% resturaunt.location.display_address.each do |address|%>
    <%= address %>
    <%end %>
    <br></br>
    </div>
    <%end %>
  </div>
</div>
